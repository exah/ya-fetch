{
  "name": "ya-fetch",
  "version": "2.1.6",
  "description": "Super light-weight wrapper around fetch",
  "author": "John Grishin <hi@johngrish.in>",
  "license": "MIT",
  "repository": "exah/ya-fetch",
  "sideEffects": false,
  "type": "module",
  "module": "./esm/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./types/index.d.ts",
        "default": "./esm/index.js"
      }
    }
  },
  "files": [
    "esm",
    "types"
  ],
  "tags": [
    "fetch",
    "api",
    "rest",
    "ajax",
    "request",
    "get",
    "post",
    "patch",
    "put",
    "delete",
    "head",
    "tiny",
    "json",
    "typescript"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:esm": "del esm && tsc -p tsconfig.esm.json",
    "build:types": "del types && tsc -p tsconfig.types.json",
    "build:min": "terser --module -m -c -o esm/min.js -- esm/index.js ",
    "test": "vitest",
    "size": "size-limit",
    "release": "np --no-cleanup",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "preversion": "npm run build"
  },
  "size-limit": [
    {
      "path": "./esm/index.js",
      "limit": "1.1Kb"
    }
  ],
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "printWidth": 80
  },
  "auto-changelog": {
    "unreleased": true,
    "commitLimit": false,
    "tagPattern": "\\d+\\.\\d+\\.\\d+$",
    "template": ".changelog.hbs"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "auto-changelog": "^2.5.0",
    "del-cli": "^5.1.0",
    "jsdom": "^22.1.0",
    "msw": "^2.12.3",
    "np": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "query-string": "^8.2.0",
    "size-limit": "^10.0.3",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  }
}
